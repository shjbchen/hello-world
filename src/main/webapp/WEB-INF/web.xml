<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  

  <servlet>
  	<servlet-name>CVAssertionConsumerService</servlet-name>
  	<display-name>CVAssertionConsumerService</display-name>
  	<description>Used to receive and analyse Saml Response from W3id</description>
  	<servlet-class>cv.sso.sp.acs.CVAssertionConsumerService</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SsoLogoutServlet</servlet-name>
  	<display-name>SsoLogoutServlet</display-name>
  	<description>handle single log out job</description>
  	<servlet-class>cv.sso.sp.logout.SsoLogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>OIDCTokenConsumer</servlet-name>
  	<display-name>OIDCTokenConsumer</display-name>
  	<description></description>
  	<servlet-class>cv.sso.rp.OIDCTokenConsumer</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CVAssertionConsumerService</servlet-name>
  	<url-pattern>/saml/assertionConsumer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SsoLogoutServlet</servlet-name>
  	<url-pattern>/SsoLogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>OIDCTokenConsumer</servlet-name>
  	<url-pattern>/oidc/tokenConsumer</url-pattern>
  </servlet-mapping>
  
</web-app>
